<litepal>
    <!--我们将数据库名指定为cool_weather ，数据库版本指定成1，并将Province、City、和County这3个实体类添加到映射列表当中-->
    <dbname value="cool_weather"/>
    <version value="1"/>
    <!--将三个实体类添加到映射列表中-->
    <list>
        <mapping class="com.example.coolweather.bd.Province"/>
        <mapping class="com.example.coolweather.bd.City"/>
        <mapping class="com.example.coolweather.bd.County"/>
    </list>
</litepal>